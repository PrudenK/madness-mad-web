---
import "../styles/global.css"
import "../styles/topbar.css"
import "../styles/footer.css"
import "../styles/doc.css"
import "../styles/docSidebar.css"

import TopBar from "../components/TopBar.astro"
import Footer from "../components/Footer.astro"
import DocSidebar from "../components/DocSidebar.astro"
import DocContent from "../components/DocContent.astro"

const BASE = import.meta.env.BASE_URL
---

<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={`${BASE}/logo_mm_sin_fondo_negro.png`} />
    <link rel="icon" type="image/png" href={`${BASE}/logo_mm_sin_fondo_blanco.png`} media="(prefers-color-scheme: dark)" />
    <title>MadnessMad Docs</title>
</head>
<body>

<TopBar />
<main class="main doc-main">

    <div class="doc-layout">
        <aside class="doc-sidebar">
            <DocSidebar />
        </aside>

        <section class="doc-center">
            <div class="doc-inner">
                <DocContent />
            </div>
        </section>
    </div>
</main>

<Footer />
</body>
</html>
